{
  "development": {
    "driver": "pg",
    "database": "<%= applicationFolder %>",
    "user": "<%= applicationFolder %>",
    "password": "<%= applicationFolder %>",
    "host": "postgresql",
    "port": 5432
  },
  "production": {
    "driver": "pg",
    "database": {"ENV": "DATABASE_DB"},
    "host": {"ENV": "DATABASE_HOST"},
    "port": {"ENV": "DATABASE_PORT"},
    "user": {"ENV": "DATABASE_USER"},
    "password": {"ENV": "DATABASE_PASSWORD"}
  },
  "defaultEnv": "development",
  "sql-file": true
}
