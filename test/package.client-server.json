{
  "name": "plop",
  "version": "1.0.0",
  "main": "server/server.js",
  "scripts": {
    "start": "node .",
    "client:build": "webpack --config client/webpack.config.js",
    "client:watch": "webpack-dev-server --config client/webpack.config.dev.js --hot",
    "client:test": "NODE_ENV=test jest",
    "client:test:watch": "NODE_ENV=test jest --watch",
    "server:watch": "nodemode server/server.js --ignore client/",
    "package-push": "docker-compose exec package-push ./opt/app-packager/package-and-push.sh --rpm-name=plop --version=$npm_package_version --repository=$(git remote get-url origin)",
    "package": "npm install; npm run client:build",
    "pretest": "eslint .",
    "posttest": "nsp check"
  },
  "dependencies": {
    "healthcheck-fastit": "git+ssh://git@github.com:fastit/health-check.git#1.0.1",
    "compression": "^1.0.3",
    "cors": "^2.5.2",
    "helmet": "^1.3.0",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^2.4.0",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^1.0.1",
    "loopback": "^3.0.0-alpha.1"
  },
  "engines": {
    "node": ">= 6.2"
  },
  "jest": {
    "rootDir": "./client/source",
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "<rootDir>/CSSStub.js"
    },
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/../../coverage",
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/../../node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts|jsx|tsx)?$",
    "globals": {
      "__TS_CONFIG__": "<rootDir>/../tsconfig.json"
    },
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/../../node_modules/ts-jest/preprocessor.js",
      "\\.(js|jsx)$": "<rootDir>/../../node_modules/babel-jest"
    }
  },
  "devDependencies": {
    "eslint": "2.5.3",
    "nsp": "2.1.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "UNLICENSED",
  "description": "plop"
}
