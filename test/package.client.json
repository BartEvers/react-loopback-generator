{
  "name": "plop",
  "version": "0.0.1",
  "main": "server/server.js",
  "scripts": {
    "start": "node .",
    "ansible:pull": "ansible-galaxy install -r provisioning/ansible/requirements.https.yml -p provisioning/ansible/roles",
    "ansible:deploy": "ansible-playbook -i provisioning/ansible/hosts/staging provisioning/ansible/deploy.yml",
    "postdeploy": "echo \"Put here a command to be called during the deployment, like the database migration\"",
    "client:build": "webpack --config client/webpack.config.js",
    "client:watch": "webpack-dev-server --config client/webpack.config.dev.js --hot",
    "client:test": "mocha --compilers js:babel-core/register 'client/source/**/{*,}test.js'",
    "client:test:coverage": "node_modules/.bin/babel-istanbul cover node_modules/.bin/_mocha -- 'client/source/**/{*,}test.js'",
    "test": "nyc npm run client:test:coverage",
    "lint": "eslint . --ext .jsx,.js",
    "e2e": "nightwatch",
    "package-push": "REPO_URL=\"$(git remote get-url origin)\"; ssh tnusadm@sg-m4 \"package-and-push --rpm-name=plop --repository=$REPO_URL\"",
    "package": "npm install; npm run client:build"
  },
  "dependencies": {},
  "engines": {
    "node": ">= 6.2"
  }
}
